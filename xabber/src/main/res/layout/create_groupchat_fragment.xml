<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.xabber.android.ui.widget.AccountSpinner
        android:id="@+id/contact_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineProvider="bounds"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp">

        <ProgressBar
            android:id="@+id/create_groupchat_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/create_groupchat_group_setting_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Groupchat name -->

            <LinearLayout
                android:id="@+id/groupchat_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/groupchat_name_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp"
                    app:srcCompat="@drawable/ic_vcard_contact_info_24dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/create_groupchat_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/groupchat_example_name"
                        android:singleLine="true"
                        android:textSize="20sp"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/groupchat_name_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/groupchat_name"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="@dimen/vcard_secondary_text" />

                </LinearLayout>

            </LinearLayout>

            <!-- Groupchat XMPP JID -->
            <LinearLayout
                android:id="@+id/groupchat_jid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/groupchat_jid_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_vcard_xmpp_24dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/create_groupchat_jid_et"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/groupchat_example_jid"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textSize="20sp"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/create_groupchat_comm_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toRightOf="@id/create_groupchat_jid_et"
                            app:layout_constraintRight_toLeftOf="@id/create_groupchat_server_sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:textSize="20sp"
                            android:text="\@"/>

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/create_groupchat_server_sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toRightOf="@id/create_groupchat_comm_at"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:hint="choose server"
                            android:minHeight="18dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/groupchat_jid_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/jabber_id"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="@dimen/vcard_secondary_text" />

                </LinearLayout>

            </LinearLayout>

            <!-- Settings -->
            <TextView
                android:id="@+id/groupchat_settings_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/settings"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Membership setting -->
            <LinearLayout
                android:id="@+id/groupchat_membership_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/groupchat_membership_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp"
                    app:tint="@color/grey_600"
                    app:srcCompat="@drawable/ic_lock" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/create_groupchat_membership_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:prompt="@string/groupchat_membership"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:minHeight="20dp" />

                    <TextView
                        android:id="@+id/groupchat_membership_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/groupchat_membership"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="@dimen/vcard_secondary_text" />

                </LinearLayout>

            </LinearLayout>


            <!-- Index type setting -->
            <LinearLayout
                android:id="@+id/groupchat_indexed_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/groupchat_indexed_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="16dp"
                    app:tint="@color/grey_600"
                    app:srcCompat="@drawable/ic_cloud_search" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/create_groupchat_index_type_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="-16dp"
                        android:paddingStart="-16dp"
                        android:gravity="left"
                        android:prompt="@string/groupchat_index"
                        android:minHeight="20dp"/>

                    <TextView
                        android:id="@+id/groupchat_indexed_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/groupchat_index"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textSize="@dimen/vcard_secondary_text" />

                </LinearLayout>

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/groupchat_description"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/create_groupchat_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:minLines="5"
                android:background="@color/white"
                android:hint="@string/groupchat_example_description"
                android:gravity="start"
                android:textSize="20sp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</FrameLayout>